<section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <i class='fa fa-address-card' style='font-size:20px;'>&nbsp;<span style="font-size: 25px;">Subscription Details</span style="font-size: 25px;"></i>&nbsp;
            <ul class="breadcrumb">
              <li><a href="/dashboard">Dashboard</a></li>&nbsp; / &nbsp;
              <li>Subscription Details</li>
            </ul>
          </div>
       
      </div>
    </div><!-- /.container-fluid -->
  </section>


  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="row mt-3">
                      <div class="col-12">
                        <a href="/payment/add_dtls?sub_id=0" class="btn btn-primary float-end" style="margin-left: 69vw; border-radius: 7px;">Add Details</a>
                      </div>
                    </div>
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-striped example2">
                    <thead>
                    <tr>
                      <th>#</th>
                      <th>Type</th>
                      <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>                     
                      <% if(data.length > 0){
                        var i = 1
                        data.forEach(dt => { %>
                      <tr>
                        <td><%= i %></td>
                        <td><%= dt.pay_name %></td>
                        <td><a class="btn btn-primary view-button" href="/payment/add_dtls?sub_id=<%= dt.sub_id %>"><i class='fas fa-eye'></i</a></td>
                      </tr>
                    <% i++; })
                    } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>