                    </div>
                    <% if(doc_file.length > 0){
                        doc_file.forEach(fdt => {
                            var fileType = fdt.file_path.split('.');
                            fileType = fileType[fileType.length-1]
                            %>
                            <span class="font-weight-bold">Document:</span>
                            <div class="col-md-3">
                                <% if (fileType === 'pdf') { %>
                                    <a href="http://202.21.38.178:3000/uploads/<%= fdt.file_path %>" target="_blank"><img src="/img/pdf_logo.png" alt="" width="50" height="50"></a>
                                    <!-- <iframe src ="http://202.21.38.178:3000/uploads/<%= fdt.file_path %>" width="100%" height="400px"></iframe> -->
                                <% } else if (fileType == 'png' || fileType == 'jpg' || fileType == 'jpeg') { %>
                                    <img src="http://202.21.38.178:3000/uploads/<%= fdt.file_path %>" alt="" srcset="" width="50" height="50">
                                <% } else { %>
                                    <p>Unsupported file type</p>
                                <% } %>
                            </div>
                        <%})
